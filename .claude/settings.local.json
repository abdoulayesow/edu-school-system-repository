{
  "permissions": {
    "allow": [
      "Bash(npm --prefix app/ui run dev)",
      "Bash(npx tsx:*)",
      "Bash(npx prisma db execute --stdin --config=app/db/prisma.config.ts <<'EOF'\nSELECT * FROM \"Account\";\nEOF)",
      "Bash(npx prisma db execute:*)",
      "Bash(cat:*)",
      "Bash(npm run dev:*)",
      "Bash(npx prisma migrate dev:*)",
      "Bash(npx prisma db push:*)",
      "Bash(npm install:*)",
      "Bash(npx prisma:*)",
      "Bash(dir:*)",
      "Bash(grep:*)",
      "Bash(npx playwright test:*)",
      "Bash(npx prisma validate:*)",
      "Bash(gh run view:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(npm run test:e2e:*)",
      "Bash(echo:*)",
      "Bash(git push)",
      "Bash(npx tsc:*)",
      "Bash(npm run typecheck:*)",
      "Bash(gh pr edit:*)",
      "Bash(npx prisma generate:*)",
      "Bash(npx prisma db seed)",
      "Bash(npx tsc --noEmit)",
      "Bash(npx prisma db seed:*)",
      "Skill(summary-generator)",
      "Skill(summary-generator:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/auto-lint.sh\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
